@model IEnumerable<CliniKa.Models.DatabaseObject.ServiceCenter>

@{
    ViewBag.Title = "View Center";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section scripts
{
    <script src="~/Scripts/base64.js"></script>
<script src="~/Scripts/jquery.base64.js"></script>

<script src="~/Scripts/downloadify.min.js"></script>
<script src="~/Scripts/jspdf.js"></script>
<script src="~/Scripts/sprintf.js"></script>
<script src="~/Scripts/tableExport.js"></script>
<script type="text/javascript">

    $(document).ready(function () {

        $("#myBsdfsdfdfsutton").click(function () {

            $('#pdftable').tableExport({ type: 'pdf', escape: 'false', pdfFontSize: 10, border: 1 });
        });

    });
</script>

}

<p>
    <hr />
    || @Html.ActionLink("Medicine", "Index", "Medicine") ||
    @Html.ActionLink("Disease", "Index", "Disease") ||
    @Html.ActionLink("View Center", "Index", "ServinceCenter", new { @class = "btn btn-primary", @style = "color:white" }) ||
    @Html.ActionLink("Create Center", "Create", "ServinceCenter") ||
    @Html.ActionLink("Send Medicine", "Index", "AllocateMedicine") ||
    @Html.ActionLink("Disease Report", "DiseaseWiseReport", "DiseaseWiseReportGenarate") ||
    <hr />
</p>
<h2>View Center</h2>
<button id="myBsdfsdfdfsutton" type="button" class="btn btn-success">PDF Generate</button>
<table id="pdftable" class="table table-bordered">
    <thead>
        <tr>
            <th>
                District Name
            </th>
            <th>
                Upazila Name
            </th>
            <th>
                Center Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th></th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ADistrict.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AUpazila.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
